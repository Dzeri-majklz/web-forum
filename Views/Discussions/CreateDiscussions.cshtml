@model WebForum.Models.Discussion;


@if(Global.ActiveLocalUser == null){
    <h2>Чтобы создать обсуждение нужно зарегестрироваться или войти в свой акаунт</h2>
}
else{



    <form method="post">
        <div>
            <p>

                <label asp-for="Topic">Тема</label><br />
                <input type="text" asp-for="Topic" />
                <span asp-validation-for="Topic"/>
            </p>
            <p>
                <label asp-for="Text">Текст</label><br />
                <textarea asp-for="Text" rows="10" cols="100"></textarea>
                <span asp-validation-for="Text"/>
            </p>
            <p>
                <input type="submit" value="Создать"/>
            </p>
        </div>

    </form>


}
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
